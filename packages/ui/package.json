{
  "name": "@template/ui",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs.js",
    "default": "./dist/index.es.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "concurrently yarn:build:*",
    "build:vite": "vite build",
    "microbundle": "microbundle --jsx React.createElement --format modern,esm,cjs",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@swc/core": "1.2.105",
    "@swc/jest": "0.2.5",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.1",
    "@testing-library/user-event": "13.1.1",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "microbundle": "0.14.1",
    "jest": "27.3.1",
    "vite": "2.6.13"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom"
  }
}
