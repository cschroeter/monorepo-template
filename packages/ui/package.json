{
  "name": "@template/ui",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "concurrently yarn:build:*",
    "build:esm": "tsc --project tsconfig.build.json --module esnext --outDir dist/esm",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir dist/cjs",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap --declarationDir dist/types",
    "test": "jest"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.1",
    "@testing-library/user-event": "13.1.1",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.33",
    "@types/react-dom": "17.0.10",
    "jest": "27.3.1"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testEnvironment": "jsdom"
  }
}
